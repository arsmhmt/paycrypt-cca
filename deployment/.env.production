# Production Environment Configuration for Hetzner Deployment

# Flask configuration
FLASK_APP=run:create_app
ENV=production
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-here-change-this
FLASK_SECRET_KEY=your-super-secret-production-key-here-change-this

# Database configuration - PostgreSQL (recommended for production)
DATABASE_URL=postgresql://paycrypt_user:secure_password@localhost/paycrypt_prod
SQLALCHEMY_DATABASE_URI=postgresql://paycrypt_user:secure_password@localhost/paycrypt_prod

# Alternative: SQLite for smaller deployments
# DATABASE_URL=sqlite:////home/paycrypt/paycrypt-cca/instance/paycrypt_prod.db
# SQLALCHEMY_DATABASE_URI=sqlite:////home/paycrypt/paycrypt-cca/instance/paycrypt_prod.db

# API Configuration
RATE_LIMIT=1000
PAYMENT_GATEWAY_URL=https://yourdomain.com/api
PAYCRYPT_BASE_URL=https://api.yourdomain.com/v1

# Admin credentials - CHANGE THESE!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=super-secure-password-change-me
ADMIN_EMAIL=admin@yourdomain.com

# JWT configuration - Generate new secrets for production
JWT_SECRET_KEY=generate-new-jwt-secret-key-for-production
JWT_ACCESS_TOKEN_EXPIRES=86400
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Security - Generate new CSRF key
CSRF_ENABLED=True
CSRF_SESSION_KEY=generate-new-csrf-session-key-for-production

# Application Settings
FLASK_DEBUG=0
TESTING=False

# SSL/HTTPS Configuration
PREFERRED_URL_SCHEME=https
FORCE_HTTPS=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/home/paycrypt/paycrypt-cca/logs/app.log

# Email Configuration (for notifications)
MAIL_SERVER=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=email-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_BIND=127.0.0.1:8000

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/home/paycrypt/paycrypt-cca/uploads

# Backup Configuration
BACKUP_DIR=/home/paycrypt/backups
BACKUP_RETENTION_DAYS=30

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# Rate Limiting per Client Type
RATE_LIMIT_FLAT_RATE=2000
RATE_LIMIT_COMMISSION=500

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
